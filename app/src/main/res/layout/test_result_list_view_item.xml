<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_test_result_list_view_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_key">

    <TextView
        android:id="@+id/txtView_test_result_idx"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="idx"
        android:background="@drawable/back_border_line"
        android:textAlignment="center"
        android:maxLines="1"
        android:minLines="1"/>

    <TextView
        android:id="@+id/txtView_test_result_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@drawable/back_border_line"
        android:textAlignment="center"
        android:text="Time"
        android:maxLines="1"
        android:minLines="1" />

    <TextView
        android:id="@+id/txtView_test_category"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_border_line"
        android:textAlignment="center"
        android:text="File I/O"
        android:maxLines="1"
        android:minLines="1"/>

    <TextView
        android:id="@+id/txtView_test_result_value"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/back_border_line"
        android:textAlignment="center"
        android:text="Mbps"
        android:maxLines="1"
        android:minLines="1"/>

</LinearLayout>